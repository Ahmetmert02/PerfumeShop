@model PerfumeShop.Core.Entities.Product

@{
    ViewData["Title"] = "Produkt löschen";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h4>Sind Sie sicher, dass Sie dieses Produkt löschen möchten?</h4>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
                        }
                        else
                        {
                            <img src="~/images/no-image.jpg" alt="No Image" class="img-fluid rounded" />
                        }
                    </div>
                    <div class="col-md-8">
                        <h2>@Model.Name</h2>
                        <p class="text-muted">
                            <span class="badge bg-primary">@Model.Brand?.Name</span>
                            <span class="badge bg-secondary">@Model.Category?.Name</span>
                        </p>
                        <h4 class="text-primary">@Model.Price.ToString("C")</h4>
                    </div>
                </div>

                <div class="mb-4">
                    <h5>Produktinformationen</h5>
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th style="width: 30%">Produkt-ID</th>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Kategorie</th>
                                <td>@Model.Category?.Name</td>
                            </tr>
                            <tr>
                                <th>Marke</th>
                                <td>@Model.Brand?.Name</td>
                            </tr>
                            <tr>
                                <th>Preis</th>
                                <td>@Model.Price.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Bestand</th>
                                <td>@Model.Stock</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inaktiv</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex mt-4">
                        <button type="submit" class="btn btn-danger me-2">Löschen bestätigen</button>
                        <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 