<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin-Bereich - PerfumeShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --color-burgundy: #800020;
            --color-dark-brown: #5D4037;
            --color-medium-brown: #8D6E63;
            --color-light-brown: #D7CCC8;
            --color-black: #212121;
            --color-cream: #EFEBE9;
        }
        
        /* Admin Panel Button Styles */
        .btn-primary {
            background-color: var(--color-burgundy) !important;
            border-color: var(--color-burgundy) !important;
        }
        
        .btn-primary:hover {
            background-color: var(--color-dark-brown) !important;
            border-color: var(--color-dark-brown) !important;
        }
        
        .btn-info {
            background-color: var(--color-medium-brown) !important;
            border-color: var(--color-medium-brown) !important;
            color: white !important;
        }
        
        .btn-info:hover {
            background-color: var(--color-dark-brown) !important;
            border-color: var(--color-dark-brown) !important;
        }
        
        .btn-success {
            background-color: #2E7D32 !important;
            border-color: #2E7D32 !important;
        }
        
        .btn-danger {
            background-color: #C62828 !important;
            border-color: #C62828 !important;
        }
        
        /* Admin Panel Navbar */
        .navbar-dark.bg-dark {
            background-color: var(--color-dark-brown) !important;
        }
        
        /* Admin Panel Badges */
        .badge.bg-success {
            background-color: #2E7D32 !important;
        }
        
        .badge.bg-danger {
            background-color: #C62828 !important;
        }
        
        /* Admin Panel Tables */
        .table-striped > tbody > tr:nth-of-type(odd) {
            background-color: var(--color-cream);
        }
        
        /* Admin Panel Forms */
        .form-control:focus {
            border-color: var(--color-burgundy);
            box-shadow: 0 0 0 0.25rem rgba(128, 0, 32, 0.25);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">PerfumeShop Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Produkte</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Verwaltung
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Kategorien</a></li>
                                <li><a class="dropdown-item" href="#">Marken</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Bestellungen</a></li>
                                <li><a class="dropdown-item" href="#">Benutzer</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Zur Website
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Abmelden
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - PerfumeShop Admin
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 