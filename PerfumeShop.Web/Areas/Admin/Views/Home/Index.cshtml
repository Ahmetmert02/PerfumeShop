@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Produkte</h5>
                    <p class="card-text display-4">@ViewBag.TotalProducts</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Details anzeigen</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Aktive Produkte</h5>
                    <p class="card-text display-4">@ViewBag.ActiveProducts</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Details anzeigen</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Kategorien</h5>
                    <p class="card-text display-4">@ViewBag.TotalCategories</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">Details anzeigen</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Marken</h5>
                    <p class="card-text display-4">@ViewBag.TotalBrands</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">Details anzeigen</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-table me-1"></i>
                    Schnellzugriff
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Neues Produkt erstellen
                            <i class="bi bi-plus-circle"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Produkte verwalten
                            <i class="bi bi-box-seam"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Bestellungen anzeigen
                            <i class="bi bi-cart"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Benutzer verwalten
                            <i class="bi bi-people"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-1"></i>
                    Systeminfo
                </div>
                <div class="card-body">
                    <p><strong>Version:</strong> 1.0.0</p>
                    <p><strong>Letzte Aktualisierung:</strong> @DateTime.Now.ToString("dd.MM.yyyy")</p>
                    <p><strong>Server:</strong> @Environment.MachineName</p>
                    <p><strong>Betriebssystem:</strong> @Environment.OSVersion</p>
                </div>
            </div>
        </div>
    </div>
</div> 