@model PerfumeShop.Core.Entities.Category

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Category Details</h1>
    <p class="mb-4">Details of the selected category.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">ID</dt>
                <dd class="col-sm-10">@Model.Id</dd>
                
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description</dd>
                
                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Inactive</span>
                    }
                </dd>
                
                <dt class="col-sm-2">Created At</dt>
                <dd class="col-sm-10">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                
                <dt class="col-sm-2">Last Updated</dt>
                <dd class="col-sm-10">
                    @if (Model.UpdatedAt.HasValue)
                    {
                        @Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                    }
                    else
                    {
                        <span>-</span>
                    }
                </dd>
            </dl>
            
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Bearbeiten</a>
                <a asp-action="Index" class="btn btn-secondary">Zur√ºck zur Liste</a>
            </div>
        </div>
    </div>
</div> 