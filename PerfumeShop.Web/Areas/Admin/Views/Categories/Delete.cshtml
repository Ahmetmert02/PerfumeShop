@model PerfumeShop.Core.Entities.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Delete Category</h1>
    <p class="mb-4 text-danger">Are you sure you want to delete this category?</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">ID</dt>
                <dd class="col-sm-10">@Model.Id</dd>
                
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description</dd>
                
                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Inactive</span>
                    }
                </dd>
                
                <dt class="col-sm-2">Created At</dt>
                <dd class="col-sm-10">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
            </dl>
            
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> Warning: Deleting a category cannot be undone. If products are linked to this category, the category cannot be deleted.
            </div>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Löschen" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Zurück zur Liste</a>
            </form>
        </div>
    </div>
</div> 