@model PerfumeShop.Web.Models.WebLoginModel

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="card-header">
	<a class="text-center" href="index.html"> <h4>@ViewData["Title"]</h4></a>
</div>
<div class="card-body">
	@if (TempData["SuccessMessage"] != null)
	{
		<div class="alert alert-success">
			@TempData["SuccessMessage"]
		</div>
	}
	<form asp-action="Login" method="post" class="mt-5 mb-5 login-input">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group mb-3">
			<input asp-for="Email" class="form-control" placeholder="Email" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<input asp-for="Password" class="form-control" placeholder="Password" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<div class="form-check">
				<input asp-for="RememberMe" class="form-check-input" />
				<label asp-for="RememberMe" class="form-check-label"></label>
			</div>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary w-100">Login</button>
		</div>
	</form>
</div>
<div class="card-footer">
	<div class="text-center">
		<p>Don't have an account? <a asp-action="Register">Register now</a></p>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
} 